<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bonprofit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bonprofit.vista.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity
            android:name="com.example.bonprofit.vista.Login"
            android:label="@string/title_activity_login"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.bonprofit.model.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.bonprofit.vista.Carta"
            android:label="@string/title_activity_carta"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.bonprofit.vista.Llistadeplats"
            android:label="@string/title_activity_llistadeplats"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.bonprofit.vista.Llistacomentaris"
            android:label="@string/title_activity_llistacomentaris" 
            android:screenOrientation="portrait">
            
        </activity>
        <activity
            android:name="com.example.bonprofit.vista.Afegircomentari"
            android:label="@string/title_activity_afegircomentari" 
            android:parentActivityName="com.example.bonprofit.vista.Llistacomentaris"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
